<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorFragmentBackground">

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/home_refresh"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorFragmentBackground"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		app:layout_scrollFlags="scroll|enterAlways">

		<androidx.core.widget.NestedScrollView
			android:id="@+id/cards_scroll_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:id="@+id/cards_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clipToPadding="false"
				android:orientation="vertical"
				android:padding="8dp">

				<open.v0gdump.varlamov.ui.fragment.home.view.HomeFreshPublicationCardView
					android:id="@+id/fresh_publication_card"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

				<open.v0gdump.varlamov.ui.fragment.home.view.HomeVideosCardView
					android:id="@+id/videos_card"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

				<open.v0gdump.varlamov.ui.fragment.home.view.HomeNewsCardView
					android:id="@+id/news_card"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

				<include
					layout="@layout/view_home_varlamov"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

			</LinearLayout>
		</androidx.core.widget.NestedScrollView>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar"
		android:layout_width="match_parent"
		android:layout_height="144dp"
		android:background="@android:color/transparent">

		<com.google.android.material.appbar.CollapsingToolbarLayout
			android:id="@+id/toolbar_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:expandedTitleGravity="bottom"
			app:expandedTitleMarginBottom="18dp"
			app:expandedTitleMarginStart="10dp"
			app:expandedTitleTextAppearance="@style/CollapsingToolbarTextStyle"
			app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

			<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				app:layout_collapseMode="pin" />

		</com.google.android.material.appbar.CollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>