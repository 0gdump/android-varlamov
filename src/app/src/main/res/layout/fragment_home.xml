<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/home_refresh"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#EEE">

	<androidx.core.widget.NestedScrollView
		android:id="@+id/cards_scroll_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/cards_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:padding="10dp">

			<retulff.open.varlamov.ui.view.home.HomeLatestPublicationCardView
				android:id="@+id/latest_publication"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:orientation="vertical"
				app:cardCornerRadius="2dp"
				app:cardElevation="0dp">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.appcompat.widget.AppCompatImageButton
						android:id="@+id/social_vk_button"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_margin="4dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackground"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_vk" />

					<androidx.appcompat.widget.AppCompatImageButton
						android:id="@+id/social_twitter_button"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_margin="4dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackground"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_twitter" />

					<androidx.appcompat.widget.AppCompatImageButton
						android:id="@+id/social_youtube_button"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_margin="4dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackground"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_youtube" />

					<androidx.appcompat.widget.AppCompatImageButton
						android:id="@+id/social_instagram_button"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_margin="4dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackground"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_instagram" />

					<androidx.appcompat.widget.AppCompatImageButton
						android:id="@+id/social_facebook_button"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_margin="4dp"
						android:adjustViewBounds="true"
						android:background="?android:selectableItemBackground"
						android:scaleType="fitCenter"
						android:src="@drawable/ic_facebook" />

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.cardview.widget.CardView>

		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>